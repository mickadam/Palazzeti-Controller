# Configuration du contrôleur Palazzetti
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins

# Configuration série
SERIAL_PORT=/dev/ttyUSB0
BAUD_RATE=38400
TIMEOUT=10
CONNECTION_TEST_TIMEOUT=5

# Configuration Flask
HOST=0.0.0.0
PORT=5000
DEBUG=false

# Configuration des notifications
NOTIFICATION_URL=http://localhost:5000

# Configuration des notifications email
NOTIFICATIONS_ENABLED=true
NOTIFICATION_CHECK_INTERVAL=30

# Configuration SMTP pour les notifications email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=votre-email@gmail.com
SMTP_PASSWORD=votre-mot-de-passe-app
FROM_EMAIL=votre-email@gmail.com
TO_EMAILS=alerte@domaine.com,admin@domaine.com
SMTP_USE_TLS=true

# Configuration du logging
LOG_LEVEL=INFO
