[Unit]
Description=Palazzeti Controller - Service de contrôle du poêle Palazzetti
Documentation=https://github.com/votre-repo/Palazzeti-Controller
After=network.target
Wants=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/opt/palazzeti-controller
Environment=PATH=/opt/palazzeti-controller/venv/bin
Environment=PYTHONPATH=/opt/palazzeti-controller
Environment=DEBUG=False
Environment=LOG_LEVEL=INFO
Environment=SERIAL_PORT=/dev/ttyUSB0
Environment=HOST=0.0.0.0
Environment=PORT=5000
ExecStart=/opt/palazzeti-controller/venv/bin/python app.py
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=palazzeti-controller

# Sécurité
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/palazzeti-controller
ReadWritePaths=/var/log/palazzeti-controller

# Permissions pour l'accès série
SupplementaryGroups=dialout

[Install]
WantedBy=multi-user.target
